generator client {
    provider = "prisma-client"
    output = "./src/lib/prisma"
    engineType = "client"
}

datasource db {
    provider = "sqlite"
}

model Todo {
    id        Int      @id @default(autoincrement())
    title     String
    createdAt DateTime @default(now())
}

model User {
    id       String    @id @default(nanoid(6))
    userName String    @unique
    password String
    name     String
    role     Role      @default(USER)
}

enum Role {
    USER
    EDITOR
    ADMIN
}
