generator client {
  provider   = "prisma-client"
  output     = "./src/lib/prisma"
  engineType = "client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id         String          @id @default(nanoid(6))
  userName   String          @unique
  password   String?
  name       String
  role       Role            @default(USER)
  invitation UserInvitation?
  responses  Response[]
}

enum Role {
  USER
  EDITOR
  ADMIN
}

model UserInvitation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
}

model Appointment {
  id         String             @id @default(nanoid(6))
  createdAt  DateTime           @default(now())
  deletedAt  DateTime?
  startDate  DateTime
  endDate    DateTime?
  title      String
  shortTitle String
  location   String?
  link       String?
  type       AppointmentType
  status     AppointmentStatus?
  responses  Response[]
  placements Placement[]
}

enum AppointmentStatus {
  DRAFT
  PUBLISHED
}

enum AppointmentType {
  TOURNAMENT_BY
  TOURNAMENT_DE
  HOLIDAY
}

model Response {
  userId        String
  user          User         @relation(fields: [userId], references: [id])
  appointmentId String
  appointment   Appointment  @relation(fields: [appointmentId], references: [id])
  responseType  ResponseType

  @@id([userId, appointmentId])
}

enum ResponseType {
  ACCEPT
  MAYBE
  DECLINE
}

model Player {
  id         String      @id @default(nanoid(6))
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  name       String
  year       Int
  qttr       Int
  teamId     String?
  team       Team?       @relation(fields: [teamId], references: [id])
  placements Placement[]
}

model Team {
  id        String   @id @default(nanoid(6))
  createdAt DateTime @default(now())
  title     String
  players   Player[]
}

model Placement {
  createdAt     DateTime    @default(now())
  playerId      String
  player        Player      @relation(fields: [playerId], references: [id])
  appointmentId String
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  category      String
  placement     String?

  @@id([playerId, appointmentId, category])
}
